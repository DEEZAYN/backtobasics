//excersise H 
function sumandmultiply(string,string2,number) {
let sumstring = string + string2;
let multipliednumber = number * 2;
return sumstring + multipliednumber; 
}
let result = sumandmultiply("hi", "everyone", 5);
console.log(result); 

// excersise I 
function birthyear(age) {
    const currentyear = 2023;
    const birthyear = currentyear - age;
    return birthyear;
}
let result1=birthyear(23) 
console.log(result1);

