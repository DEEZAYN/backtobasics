/// Excersise H 
function exponential(number) { 
  return number % === 0;
  }
function isEven(number){
  return number % 2=== 0;
}
for (let i =5; i < 2; i++)
if (isEven(i)) { 
  const result = exponential(i);
  console.log('exponential of $(i)} is ${result}');
}

